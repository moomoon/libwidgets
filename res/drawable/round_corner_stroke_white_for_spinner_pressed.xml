<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:right="1dp">
        <bitmap
            android:gravity="bottom|right"
            android:src="@drawable/spinner_triangle_cyan" />
    </item>
    <item
        android:left="1dp"
        android:right="-1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <gradient
                android:angle="0"
                android:centerColor="#00000000"
                android:centerX="0.015"
                android:endColor="#00000000"
                android:startColor="#88000000" />
        </shape>
    </item>
    <item
        android:bottom="-1dp"
        android:left="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:radius="2dp" />

            <gradient
                android:angle="-90"
                android:centerColor="#00000000"
                android:centerY="0.15"
                android:endColor="#00000000"
                android:startColor="#88000000"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="@color/cyan" />

            <corners android:radius="2dp" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>