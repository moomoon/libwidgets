<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/time_keyboard_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_keyboard_digit_3"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dialog_title_bar_text_padding_left"
            android:paddingRight="@dimen/dialog_title_bar_text_padding_right"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/time_keyboard_digit_2"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dialog_title_bar_text_padding_left"
            android:paddingRight="@dimen/dialog_title_bar_text_padding_right"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dialog_title_bar_text_padding_left"
            android:paddingRight="@dimen/dialog_title_bar_text_padding_right"
            android:text=":"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/time_keyboard_digit_1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dialog_title_bar_text_padding_left"
            android:paddingRight="@dimen/dialog_title_bar_text_padding_right"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/time_keyboard_digit_0"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/dialog_title_bar_text_padding_left"
            android:paddingRight="@dimen/dialog_title_bar_text_padding_right"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/time_keyboard_backspace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/time_keyboard_bg"
            android:src="@drawable/backspace_bt_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_keyboard_button_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_keyboard_button_1"
            style="@style/time_keyboard_button_big"
            android:text="1" />

        <TextView
            android:id="@+id/time_keyboard_button_2"
            style="@style/time_keyboard_button_big"
            android:text="2" />

        <TextView
            android:id="@+id/time_keyboard_button_3"
            style="@style/time_keyboard_button_big"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_keyboard_button_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_keyboard_button_4"
            style="@style/time_keyboard_button_big"
            android:text="4" />

        <TextView
            android:id="@+id/time_keyboard_button_5"
            style="@style/time_keyboard_button_big"
            android:text="5" />

        <TextView
            android:id="@+id/time_keyboard_button_6"
            style="@style/time_keyboard_button_big"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_keyboard_button_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_keyboard_button_7"
            style="@style/time_keyboard_button_big"
            android:text="7" />

        <TextView
            android:id="@+id/time_keyboard_button_8"
            style="@style/time_keyboard_button_big"
            android:text="8" />

        <TextView
            android:id="@+id/time_keyboard_button_9"
            style="@style/time_keyboard_button_big"
            android:text="9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_keyboard_button_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_keyboard_button_00"
            style="@style/time_keyboard_button_small"
            android:text=":00" />

        <TextView
            android:id="@+id/time_keyboard_button_0"
            style="@style/time_keyboard_button_big"
            android:text="0" />

        <TextView
            android:id="@+id/time_keyboard_button_30"
            style="@style/time_keyboard_button_small"
            android:text=":30" />
    </LinearLayout>

</LinearLayout>