<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/calendar_bg"
    android:orientation="vertical" >

    <com.mmscn.calendar.YearSlideBar
        android:id="@+id/year_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_year_bar_height"
        android:paddingBottom="@dimen/calendar_year_bar_padding_bottom" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/line_color" />

    <com.mmscn.calendar.WeekBar
        android:id="@+id/week_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/calendar_week_bar_height" />

    <ViewFlipper
        android:id="@+id/flipper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calendar_month_height" />

</LinearLayout>