<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/time_picker_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/time_picker_extra_bt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <com.mmscn.timepicker.Slider
        android:id="@+id/time_picker_slider_hour"
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_picker_slider_height"
        android:paddingBottom="@dimen/time_picker_slider_padding_vertical"
        android:paddingTop="@dimen/time_picker_slider_padding_vertical" />

    <com.mmscn.timepicker.Slider
        android:id="@+id/time_picker_slider_minute"
        android:layout_width="match_parent"
        android:layout_height="@dimen/time_picker_slider_height"
        android:paddingBottom="@dimen/time_picker_slider_padding_vertical"
        android:paddingTop="@dimen/time_picker_slider_padding_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <EditText
            android:id="@+id/time_picker_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:inputType="number"
            android:maxEms="2"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_picker_time_seperator" />

        <EditText
            android:id="@+id/time_picker_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:inputType="number"
            android:maxEms="2"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>